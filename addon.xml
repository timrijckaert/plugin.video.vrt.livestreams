<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.kodiplayground"
       name="Kodi Tryout"
       version="0.0.1"
       provider-name="Tim Rijckaert">

    <requires>
        <import addon="xbmc.python" version="2.14.0"/>
        <import addon="script.module.beautifulsoup4" version="4.3.2"/>
        <import addon="script.module.requests" version="2.9.1"/>
    </requires>

    <extension point="xbmc.python.script"
               library="addon.py">
        <provides>audio</provides>
    </extension>

    <extension point="xbmc.addon.metadata">
        <summary lang="en">VRT Radioplus</summary>
        <summary lang="nl">VRT Radioplus</summary>
        <description lang="en">Listen to VRT's radio streams</description>
        <description lang="nl">Luister naar VRT's radio streams</description>
        <disclaimer lang="en"></disclaimer>
        <disclaimer lang="nl"></disclaimer>
        <language>nl</language>
        <platform>all</platform>
        <license>GNU General Public License, v2</license>
        <forum></forum>
        <assets>
            <icon>icon.png</icon>
        </assets>
        <news>This is just a try out kodi plugin to see what is possible</news>
        <website>http://www.dieisernogniet.be</website>
        <email>tim.rijckaert@gmail.com</email>
        <platform>all</platform>
        <source>git://github.com/timrijckaert/</source>
    </extension>
</addon>