<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.vrt.livestreams"
       name="VRT Livestreams"
       version="0.0.1"
       provider-name="Tim Rijckaert">

    <requires>
        <import addon="xbmc.python" version="2.14.0"/>
        <import addon="script.module.requests" version="1.1.0"/>
    </requires>

    <extension point="xbmc.python.pluginsource"
               library="addon.py">
        <provides>video audio</provides>
    </extension>

    <extension point="xbmc.addon.metadata">
        <summary lang="nl">VRT Livestreams</summary>
        <description lang="nl">Bekijk/beluister de publieke VRT live streams</description>
        <language>nl</language>
        <platform>all</platform>
        <license>GNU General Public License, v2</license>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
        <news>Laat toe tot het bekijken/beluisteren van de live streams van de VRT</news>
        <website>http://www.vrt.be</website>
        <email>tim dot rijckaert at gmail com</email>
        <platform>all</platform>
        <source>git://github.com/timrijckaert/plugin.video.vrt.livestreams.git</source>
    </extension>
</addon>